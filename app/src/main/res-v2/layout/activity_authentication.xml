<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/authenticationCloseButton"
        android:layout_width="@dimen/app_entry_close_button_size"
        android:layout_height="@dimen/app_entry_close_button_size"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/wire__padding__small"
        android:layout_marginEnd="@dimen/wire__padding__small"
        android:fontFamily="@font/wire_glyphs"
        android:gravity="center"
        android:text="@string/glyph__close"
        android:textColor="@color/graphite"
        android:textSize="@dimen/wire__text_size__regular"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


